{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "ES2020.String"
        ],
        "outDir": "./build",
        "rootDir": "./",
        "downlevelIteration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "inlineSourceMap": true
    }
}